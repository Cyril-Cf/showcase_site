doctype html
html(lang="fr")
    head
        // Google tag (gtag.js)
        script(src="https://www.googletagmanager.com/gtag/js?id=G-TBE6SSQV9Z", async)
        script.
            window.dataLayer = window.dataLayer || [];
            function gtag() {
            dataLayer.push(arguments);
            }
            gtag("js", new Date());
            gtag("config", "G-TBE6SSQV9Z");
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(name="description" data-attr-t="" data-attr-t-interpolate="" content-t="{{head.description}}")
        meta(name="keywords" data-attr-t="" data-attr-t-interpolate="" content-t="{{head.keywords}}")
        meta(name="author" content="Cyril Couffe")
        title(data-t="head.title")
        link(rel="icon" data-attr-t="" data-attr-t-interpolate="" href-t="{{head.links.logo}}")
        script(src="https://cdn.jsdelivr.net/npm/i18next@23.2.1/i18next.min.js")
        script(src="https://cdn.jsdelivr.net/npm/i18next-http-backend@2.2.1/i18nextHttpBackend.min.js")
        script.
            i18next.use(i18nextHttpBackend).init({
            debug: !0,
            fallbackLng: ["fr-FR", "en-US"],
            lng: ["fr-FR", "en-US"],
            backend: { loadPath: "locales/{{lng}}/{{ns}}.json" },
            });
        script(data-attr-t="" data-attr-t-interpolate="" src-t="{{links.js}}", defer)
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com", crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Jost:wght@400;600&display=swap" rel="stylesheet")
        block css_link
    body
        header
            include partials/header
            block bottom
        main
            block main
        footer
            include partials/footer
